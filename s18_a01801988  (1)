nums2 = [1,2,3,4,10,15,22]

evens = []
odds = []
for x in nums2:
    if x % 2 == 0:
        evens.append(x)
    else:
        odds.append(x)

print("Evens:", evens)
print("Odds:", odds)



users = ["admin", "guest"]
new_user = "user3"

if new_user not in users:
    users.append(new_user)

print("Users:", users)
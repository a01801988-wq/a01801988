items = ["milk", "eggs", "bread"]
bought = [False, True, False]

print("To buy:", [x for x, b in zip(items, bought) if not b])

for i in range(len(items)):
    if not bought[i]:
        if input(f"Bought {items[i]}? ").lower().startswith("y"):
            bought[i] = True

print("Updated:", list(zip(items, bought)))


